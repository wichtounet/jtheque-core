<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="moduleService" class="org.jtheque.modules.impl.ModuleService">
        <constructor-arg><bean class="org.jtheque.modules.impl.ModuleLoader"/></constructor-arg>
    </bean>

    <bean id="updateService" class="org.jtheque.update.UpdateService">
        <constructor-arg><osgi:reference interface="org.jtheque.states.IStateService" /></constructor-arg>
        <constructor-arg><osgi:reference interface="org.jtheque.core.ICore" /></constructor-arg>
        <constructor-arg><osgi:reference interface="org.jtheque.ui.able.IUIUtils" /></constructor-arg>
        <constructor-arg ref="moduleService"/>
    </bean>

    <osgi:service ref="moduleService" interface="org.jtheque.modules.able.IModuleService"/>
    <osgi:service ref="updateService" interface="org.jtheque.update.IUpdateService"/>
</beans>