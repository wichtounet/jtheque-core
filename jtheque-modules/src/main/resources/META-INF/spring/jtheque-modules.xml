<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="moduleService" class="org.jtheque.modules.impl.ModuleService">
        <constructor-arg>
            <bean class="org.jtheque.modules.impl.ModuleLoader"/>
        </constructor-arg>
    </bean>

    <bean id="updateService" class="org.jtheque.update.impl.UpdateService">
        <constructor-arg>
            <osgi:reference interface="org.jtheque.states.able.IStateService"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="versionsLoader" class="org.jtheque.update.impl.versions.VersionsLoader"/>
        </constructor-arg>
    </bean>

    <osgi:reference id="stateService" interface="org.jtheque.states.able.IStateService"/>
    <osgi:reference id="core" interface="org.jtheque.core.able.ICore"/>
    <osgi:reference id="errorService" interface="org.jtheque.errors.able.IErrorService"/>
    <osgi:reference id="iuiUtils" interface="org.jtheque.ui.able.IUIUtils"/>
    <osgi:reference id="languageService" interface="org.jtheque.i18n.able.ILanguageService"/>
    <osgi:reference id="imageService" interface="org.jtheque.images.able.IImageService"/>

    <osgi:service ref="moduleService" interface="org.jtheque.modules.able.IModuleService"/>
    <osgi:service ref="updateService" interface="org.jtheque.update.able.IUpdateService"/>
</beans>