<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="modulesManager" class="org.jtheque.modules.impl.ModuleManager">
        <constructor-arg><bean class="org.jtheque.modules.impl.ModuleLoader"/></constructor-arg>
    </bean>

    <osgi:service id="modulesManagerService" ref="modulesManager" interface="org.jtheque.modules.able.IModuleManager"/>

</beans>