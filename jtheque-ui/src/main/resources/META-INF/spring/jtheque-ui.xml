<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="uiUtils" class="org.jtheque.ui.able.UIUtils">
        <constructor-arg ref="viewDelegate" />
    </bean>

    <bean id="viewDelegate" class="org.jtheque.ui.utils.SwingViewDelegate" />

    <osgi:service interface="org.jtheque.ui.able.IUIUtils" ref="uiUtils" />

</beans>