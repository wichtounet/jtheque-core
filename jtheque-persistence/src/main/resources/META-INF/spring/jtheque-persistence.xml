<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="persistenceManager" class="org.jtheque.persistence.PersistenceManager" />

    <osgi:service id="persistenceManagerService" ref="persistenceManager" interface="org.jtheque.persistence.able.IPersistenceManager"/>

    <bean class="org.jtheque.persistence.DataContainerPostProcessor" />

    <!-- Persistence  -->

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource" destroy-method="destroy">
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:{current}/db/jtheque"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="daoPersistenceContext" class="org.jtheque.persistence.context.DaoPersistenceContext"/>
</beans>