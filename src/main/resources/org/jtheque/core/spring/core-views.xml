<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jtheque="http://www.jtheque.com/schema/jtheque"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.jtheque.com/schema/jtheque
            http://www.jtheque.com/schema/jtheque/jtheque.xsd"
       default-lazy-init="true">

    <!-- Window Manager -->

    <bean id="windowManager" class="org.jtheque.core.managers.view.WindowManager"/>

    <!-- Proxy views -->

    <jtheque:proxy id="mainView" type="org.jtheque.core.managers.view.impl.frame.MainView">
        <bean class="org.jtheque.core.managers.view.impl.frame.MainView" factory-method="get"/>
    </jtheque:proxy>

    <jtheque:proxy id="configView" type="org.jtheque.core.managers.view.impl.frame.ConfigView" swing="true">
        <bean class="org.jtheque.core.managers.view.impl.frame.ConfigView" />
    </jtheque:proxy>

    <jtheque:proxy id="licenceView" type="org.jtheque.core.managers.view.impl.frame.LicenceView">
        <bean class="org.jtheque.core.managers.view.impl.frame.LicenceView" />
    </jtheque:proxy>

    <jtheque:proxy id="logView" type="org.jtheque.core.managers.view.impl.frame.LogView">
        <bean class="org.jtheque.core.managers.view.impl.frame.LogView">
            <constructor-arg ref="dateFormat" />
            <constructor-arg ref="timeFormat" />
        </bean>
    </jtheque:proxy>

    <jtheque:proxy id="messageView" type="org.jtheque.core.managers.view.impl.frame.MessageView">
        <bean class="org.jtheque.core.managers.view.impl.frame.MessageView" />
    </jtheque:proxy>

    <jtheque:proxy id="moduleView" type="org.jtheque.core.managers.view.impl.frame.ModuleView">
        <bean class="org.jtheque.core.managers.view.impl.frame.ModuleView" />
    </jtheque:proxy>

    <jtheque:proxy id="repositoryView" type="org.jtheque.core.managers.view.impl.frame.RepositoryView">
        <bean class="org.jtheque.core.managers.view.impl.frame.RepositoryView" />
    </jtheque:proxy>

    <jtheque:proxy id="updateView" type="org.jtheque.core.managers.view.impl.frame.UpdateView">
        <bean class="org.jtheque.core.managers.view.impl.frame.UpdateView" />
    </jtheque:proxy>

    <!-- Java2D panes -->

    <jtheque:proxy id="collectionPane" type="org.jtheque.core.managers.view.impl.components.filthy.java2d.CollectionPane">
        <bean class="org.jtheque.core.managers.view.impl.components.filthy.java2d.CollectionPane">
            <property name="hintColor" ref="white"/>
            <property name="backgroundColor" ref="black"/>
            <property name="errorColor" ref="red"/>
            <property name="hintFont" ref="hintFont"/>
        </bean>
    </jtheque:proxy>

    <jtheque:proxy id="aboutPane" type="org.jtheque.core.managers.view.impl.components.filthy.java2d.AboutPane">
        <bean class="org.jtheque.core.managers.view.impl.components.filthy.java2d.AboutPane"/>
    </jtheque:proxy>

    <!-- Config views -->
    
    <jtheque:proxy id="configAppearanceView" type="org.jtheque.core.managers.view.impl.components.config.JPanelConfigAppearance">
        <bean class="org.jtheque.core.managers.view.impl.components.config.JPanelConfigAppearance"/>
    </jtheque:proxy>
    <jtheque:proxy id="configOthersView" type="org.jtheque.core.managers.view.impl.components.config.JPanelConfigOthers">
        <bean class="org.jtheque.core.managers.view.impl.components.config.JPanelConfigNetwork" />
    </jtheque:proxy>
    <jtheque:proxy id="configNetworkView" type="org.jtheque.core.managers.view.impl.components.config.JPanelConfigNetwork">
        <bean class="org.jtheque.core.managers.view.impl.components.config.JPanelConfigOthers"/>
    </jtheque:proxy>

    <!-- UI Defaults -->

    <bean id="uiDefaults" class="org.jtheque.core.managers.view.impl.JThequeViewDefaults">
        <property name="backgroundColor" ref="white"/>
        <property name="foregroundColor" ref="black"/>
        <property name="selectedForegroundColor" ref="white"/>
        <property name="selectedBackgroundColor" ref="blue"/>
        <property name="filthyBackgroundColor" ref="black"/>
        <property name="filthyForegroundColor" ref="white"/>
        <property name="filthyButtonFont" ref="filthyButtonFont"/>
        <property name="filthyInputFont" ref="filthyInputFont"/>
    </bean>
</beans>