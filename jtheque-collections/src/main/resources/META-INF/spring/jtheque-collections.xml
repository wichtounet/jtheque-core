<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="collectionSchema" class="org.jtheque.collections.impl.CollectionSchema" lazy-init="false"/>

    <bean id="collectionsService" class="org.jtheque.collections.impl.CollectionsService" lazy-init="false">
        <constructor-arg ref="daoCollections"/>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.file.able.IFileService"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.core.able.ICore"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.schemas.able.ISchemaService"/>
        </constructor-arg>
        <constructor-arg ref="collectionSchema"/>
    </bean>

    <bean id="daoCollections" class="org.jtheque.collections.impl.DaoCollections"/>

    <osgi:service ref="collectionsService" interface="org.jtheque.collections.able.ICollectionsService"/>
    <osgi:service ref="daoCollections" interface="org.jtheque.collections.able.IDaoCollections"/>
</beans>