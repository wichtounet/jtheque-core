<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="messageService" class="org.jtheque.messages.impl.MessageService">
        <constructor-arg>
            <osgi:reference interface="org.jtheque.core.able.Core"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.modules.able.ModuleService"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.errors.able.ErrorService"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.events.able.EventService"/>
        </constructor-arg>
    </bean>

    <osgi:service ref="messageService" interface="org.jtheque.messages.able.MessageService"/>
</beans>