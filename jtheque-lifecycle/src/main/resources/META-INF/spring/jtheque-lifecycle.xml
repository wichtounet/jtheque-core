<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean class="org.jtheque.lifecycle.LifeCycleLauncher" lazy-init="false" />

    <osgi:reference interface="org.jtheque.core.able.ICore" />
    <osgi:reference interface="org.jtheque.views.able.IViews"/>
    <osgi:reference interface="org.jtheque.views.able.IViewService"/>
    <osgi:reference interface="org.jtheque.views.able.ISplashService"/>
    <osgi:reference interface="org.jtheque.messages.able.IMessageService"/>
    <osgi:reference interface="org.jtheque.events.able.IEventService"/>
    <osgi:reference interface="org.jtheque.collections.able.ICollectionsService"/>
    <osgi:reference interface="org.jtheque.modules.able.IModuleService"/>

</beans>