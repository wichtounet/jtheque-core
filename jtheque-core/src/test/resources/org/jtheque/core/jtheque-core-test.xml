<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="lifeCycle" class="org.jtheque.core.impl.LifeCycleImpl"/>

    <bean id="core" class="org.jtheque.core.impl.CoreImpl">
        <constructor-arg>
            <bean class="org.jtheque.states.impl.StateServiceImpl"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="org.jtheque.images.impl.ImageServiceImpl" />
        </constructor-arg>
    </bean>

    <bean id="eventService" class="org.jtheque.events.impl.EventServiceImpl" />
</beans>