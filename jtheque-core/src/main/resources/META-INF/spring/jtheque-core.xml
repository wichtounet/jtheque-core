<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <bean id="core" class="org.jtheque.core.impl.Core">
        <constructor-arg>
            <osgi:reference interface="org.jtheque.states.able.StateService"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.images.able.ImageService"/>
        </constructor-arg>
        <constructor-arg>
            <osgi:reference interface="org.jtheque.events.able.EventService"/>
        </constructor-arg>
    </bean>

    <osgi:service ref="core" interface="org.jtheque.core.able.Core"/>
</beans>